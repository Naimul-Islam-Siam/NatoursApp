extends base

block content
   main.main
      .login-form
         h2.heading-secondary.ma-bt-lg Set New Password
         form.form.form--login#form--reset-pass
            .form__group
            label.form__label(for='token-reset') Token
            input#token-reset.form__input(type='text', placeholder='Reset Token', required, autocomplete="off")
            .form__group.ma-bt-md
            label.form__label(for='password-reset') Password
            input#password-reset.form__input(type='password', placeholder='••••••••', required, minlength='8')
            .form__group.ma-bt-md
            label.form__label(for='password-confirm-reset') Password Confirm
            input#password-confirm-reset.form__input(type='password', placeholder='••••••••', required, minlength='8')
            .form__group.ma-bt-md
            button.btn.btn--green Submit
