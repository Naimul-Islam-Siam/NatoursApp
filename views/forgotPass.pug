extends base

block content
   main.main
      .login-form
         h2.heading-secondary.ma-bt-lg Forgot Password
         form.form.form--login#form--forgot-pass
            .form__group
            label.form__label(for='email') Email address
            input#email.form__input(type='email', placeholder='you@example.com', required)
            .form__group.ma-bt-md
            button.btn.btn--green Submit